<div class="page-defaults" id="shopId" >
  <h1><span>Little Esty Shop</span></h1>
</div>

<div class="page-defaults" id="splitSides">

  <div class="page-defaults" id="leftSide">
    <h2>Admin Dashboard</h2>
  </div>

  <div class="page-defaults" id="rightSide">
    <ul>
      <%= link_to "Admin Home", '/admin' %>
      <%= link_to "Merchants", '/admin/merchants' %>
      <%= link_to "Invoices", '/admin/invoices' %>
    </ul>
  </div>

</div>

<div class="page-defaults" id="splitSides">
  <div class="page-defaults" id="leftSide2">
  <h3>Incomplete Invoices</h3>
  <% @not_shipped.each do |invoice| %>
    <p>Invoice #<%= link_to "#{invoice.id}", invoice_path(invoice.id) %> - <%= invoice.formatted_date %></p>
  <% end %>
  </div>

  <div class="page-defaults" id="rightSide2">
    <h3>Top Customers</h3>
    <ol>
      <% @merchants.top_5_customers.each do |customer| %>
        <li><%= "#{customer.first_name} #{customer.last_name} - #{customer.transaction_count} purchases" %></li>
      <% end %>
    </ol>
  </div>
</div>
